{
  "manifest_version": 3,
  "name": "Activity Tracker",
  "version": "1.0",
  "description": "Track your online activity.",
  "permissions": ["tabs", "activeTab", "storage"],
  "background": {
    "service_worker": "./client/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["./client/content.css"],
      "js": ["./client/content.js"]
    }
  ],
  "action": {
    "default_popup": "./client/popup.html",
    "default_icon": {
      "16": "./client/icons/track.png",
      "48": "./client/icons/track.png",
      "128": "./client/icons/track.png"
    }
  },
  "host_permissions": ["<all_urls>"]
}
